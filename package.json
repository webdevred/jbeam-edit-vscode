{
  "name": "jbeam-lsp",
  "displayName": "JBeam LSP Connector",
  "description": "Minimal VS Codium extension that connects to jbeam-lsp-server for LSP features.",
  "version": "0.0.7",
  "publisher": "webdevred",
  "repository": "https://github.com/webdevred/jbeam-edit-vscode",
  "engines": {
    "vscode": "^1.105.0"
  },
  "activationEvents": [
    "onLanguage:jbeam",
    "onLanguage:jbfl"
  ],
  "main": "./dist/src/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [
      {
        "command": "jbeam.formatDocument",
        "title": "Format JBeam Document"
      }
    ],
    "keybindings": [
      {
        "command": "jbeam.formatDocument",
        "key": "ctrl+alt+f",
        "when": "editorLangId == jbeam"
      }
    ],
    "languages": [
      {
        "id": "jbeam",
        "aliases": [
          "JBeam",
          "jbeam"
        ],
        "extensions": [
          ".jbeam"
        ]
      },
      {
        "id": "jbfl",
        "aliases": [
          "JBFL",
          "jbfl"
        ],
        "extensions": [
          ".jbfl"
        ],
        "configuration": "./src/language-jbfl-config.json"
      }
    ],
    "grammars": [
      {
        "language": "jbfl",
        "scopeName": "source.jbfl",
        "path": "./src/jbfl.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": ">=9.0.1"
  },
  "devDependencies": {
    "@types/chai": ">=5.2.3",
    "@types/mocha": ">=10.0.10",
    "@types/node": ">=25.0.10",
    "@types/vscode": "^1.105",
    "@typescript-eslint/eslint-plugin": ">=8.54.0",
    "@typescript-eslint/parser": ">=8.54.0",
    "@vscode/test-electron": ">=2.5.2",
    "@vscode/vsce": ">=3.7.1",
    "chai": ">=6.2.2",
    "esbuild": ">=0.27.2",
    "eslint": ">=9.39.2",
    "js-beautify": ">=1.15.4",
    "mocha": ">=11.7.4",
    "ts-node": ">=10.9.2",
    "typescript": ">=5.6.3"
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint src tests",
    "build": "npm run lint && esbuild src/extension.ts --bundle --platform=node --external:vscode --external:vscode-languageclient/node --minify --outfile=dist/src/extension.js",
    "format": "js-beautify -r './**/*.ts'",
    "package": "vsce package",
    "test": "npm run build && tsc -p . && node ./dist/tests/integration/run.js"
  },
  "files": [
    "dist/src",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "requiredJbeamEditVersion" :  "0.0.4"
}
