{
  "name": "jbeam-lsp",
  "displayName": "JBeam LSP Connector",
  "description": "Minimal VS Codium extension that connects to jbeam-lsp-server for LSP features.",
  "version": "0.0.3",
  "publisher": "webdevred",
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [
    "onLanguage:jbeam"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jbeam",
        "aliases": [
          "JBeam"
        ],
        "extensions": [
          ".jbeam"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@types/vscode": "^1.95.0",
    "typescript": "^5.6.3",
    "vscode-languageclient": "^9.0.1"
  },
  "scripts": {
    "compile": "tsc -p ."
  },
  "contributes": {
    "commands": [
      {
        "command": "jbeam.formatDocument",
      "title": "Format JBeam Document"
      }
    ],
    "keybindings": [
    {
      "command": "jbeam.formatDocument",
      "key": "ctrl+alt+f",
      "when": "editorLangId == jbeam"
    }
    ],
    "languages": [
      {
        "id": "jbeam",
        "aliases": ["JBeam", "jbeam"],
        "extensions": [".jbeam"]
      }
    ]
  }
}
