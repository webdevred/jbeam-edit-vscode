{
  "name": "jbeam-lsp",
  "displayName": "JBeam LSP Connector",
  "description": "Minimal VS Codium extension that connects to jbeam-lsp-server for LSP features.",
  "version": "0.0.3",
  "publisher": "webdevred",
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [
    "onLanguage:jbeam",
    "onLanguage:jbfl"
  ],
  "main": "./dist/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [{
      "command": "jbeam.formatDocument",
      "title": "Format JBeam Document"
    }],
    "keybindings": [{
      "command": "jbeam.formatDocument",
      "key": "ctrl+alt+f",
      "when": "editorLangId == jbeam"
    }],
    "languages": [{
        "id": "jbeam",
        "aliases": [
          "JBeam",
          "jbeam"
        ],
        "extensions": [
          ".jbeam"
        ]
      },
      {
        "id": "jbfl",
        "aliases": [
          "JBFL",
          "jbfl"
        ],
        "extensions": [
          ".jbfl"
        ],
        "configuration": "./src/language-jbfl-config.json"
      }
    ],
    "grammars": [{
      "language": "jbfl",
      "scopeName": "source.jbfl",
      "path": "./src/jbfl.tmLanguage.json"
    }]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.8.1",
    "@types/vscode": "^1.95.0",
    "chai": "^6.2.0",
    "js-beautify": "^1.15.4",
    "mocha": "^11.7.4",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "build": "tsc -p .",
    "format": "js-beautify -r './**/*.ts' './package.json'"
  }
}
