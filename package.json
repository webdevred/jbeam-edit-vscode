{
  "name": "jbeam-lsp",
  "displayName": "JBeam LSP Connector",
  "description": "Minimal VS Codium extension that connects to jbeam-lsp-server for LSP features.",
  "version": "0.0.7",
  "publisher": "webdevred",
  "repository": "https://github.com/webdevred/jbeam-edit-vscode",
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [
    "onLanguage:jbeam",
    "onLanguage:jbfl"
  ],
  "main": "./dist/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [
      {
        "command": "jbeam.formatDocument",
        "title": "Format JBeam Document"
      }
    ],
    "keybindings": [
      {
        "command": "jbeam.formatDocument",
        "key": "ctrl+alt+f",
        "when": "editorLangId == jbeam"
      }
    ],
    "languages": [
      {
        "id": "jbeam",
        "aliases": [
          "JBeam",
          "jbeam"
        ],
        "extensions": [
          ".jbeam"
        ]
      },
      {
        "id": "jbfl",
        "aliases": [
          "JBFL",
          "jbfl"
        ],
        "extensions": [
          ".jbfl"
        ],
        "configuration": "./src/language-jbfl-config.json"
      }
    ],
    "grammars": [
      {
        "language": "jbfl",
        "scopeName": "source.jbfl",
        "path": "./src/jbfl.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.95.0",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.12",
    "js-beautify": "^1.15.4",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && esbuild src/extension.ts --bundle --platform=node --external:vscode --outfile=dist/extension.js",
    "format": "js-beautify -r '**/*.ts' 'package.json'",
    "package": "vsce package"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}
